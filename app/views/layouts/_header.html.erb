<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "ScholarHub", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="active"><%= link_to "Home", root_path %></li>
        <% if !logged_in? %>
        <li><%= link_to "Learn More", "#more", class: "smoothScroll" %></li>
        <% end %>
        <% if logged_in? %>
          <li><%= link_to "Finder", finder_path %></li>
          
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out \n (Logged in as " + @current_user.name + ")" , logout_path, method: "delete", id:"smalltext" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<script>
$(document).ready(function() {

    $(document).on('mouseover', '.nav.navbar-nav.navbar-right li', function() {
      $('.nav.navbar-nav.navbar-right li').removeClass('active');
      $(this).toggleClass('active');
    });
    

});

</script>